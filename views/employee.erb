<h1>Details for <%= @employee.name %></h1>
<% if @employee.division != nil %>
<h4><%= @employee.name %> is part of the <%= @employee.division.name %> division.</h4>
<% end %>

<div class="form-group">
  <form action="/employees/<%= @employee.id %>/update" method="post">
    <input name="_method" type="hidden" value="patch">
    <label for="name">Rename this Employee:</label>
    <input type="text" name="name">
    <button class="btn btn-info" type="submit" name="update">Update</button>
  </form>
</div>

<div class="form-group">
  <form action="/employees/<%= @employee.id %>/delete" method="post">
    <input type="hidden" name="_method" value="delete">
    <input type="hidden" name="employee_id" value="<%= @employee.id %>">
    <button class="btn btn-danger" name="delete" type="submit">Delete</button>
  </form>
</div>

<% if @divisions != nil %>
<div class="form-group">
  <form action="/employees/<%= @employee.id %>/assign" method="post">
    <input name="_method" type="hidden" value="patch">
    <label for="division">Assign a Division:</label>
    <select id="division" name="division">
      <% @divisions.each do |division| %>
      <option value="<%= division.id %>"> <%= division.name %></option>
      <% end %>
    </select>
    <button class="btn btn-info" name="division_add">Assign</button>
  </form>
</div>
<% end %>
